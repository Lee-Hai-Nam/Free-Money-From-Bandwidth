{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Configuration Schema",
  "type": "object",
  "required": ["app_id", "name", "docker_image"],
  "properties": {
    "app_id": {
      "type": "string",
      "description": "Unique identifier for the app"
    },
    "name": {
      "type": "string",
      "description": "Display name of the app"
    },
    "docker_image": {
      "type": "string",
      "description": "Docker image name with tag"
    },
    "supported_platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["linux", "windows", "macos"]
      },
      "default": ["linux", "windows", "macos"]
    },
    "environment_vars": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "required", "description"],
        "properties": {
          "key": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["host", "container"],
        "properties": {
          "host": {
            "type": "string"
          },
          "container": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["bind", "volume", "tmpfs"]
          }
        }
      }
    },
    "network_mode": {
      "type": "string",
      "enum": ["bridge", "host", "none"]
    },
    "proxy_support": {
      "type": "boolean",
      "default": false
    },
    "ports": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "health_check": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "interval": {
          "type": "string"
        }
      }
    },
    "earnings_api": {
      "type": "object",
      "required": ["endpoint", "auth_method"],
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "auth_method": {
          "type": "string",
          "enum": ["env", "header"]
        },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "description": {
      "type": "string"
    },
    "resource_limits": {
      "type": "object",
      "properties": {
        "cpu": {
          "type": "string"
        },
        "memory": {
          "type": "string"
        }
      }
    }
  }
}

